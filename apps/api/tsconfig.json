{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "rootDir": ".",
    "outDir": "dist",

    "allowImportingTsExtensions": false,
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "scripts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
